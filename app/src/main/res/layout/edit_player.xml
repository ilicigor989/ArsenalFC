<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/dressing_room"
            android:backgroundTint="#90FFFFFF"
            android:backgroundTintMode="src_over"
            app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:textSize="35sp"
                    app:autoSizeTextType="uniform"
                    app:autoSizeMinTextSize="25sp"
                    app:autoSizeMaxTextSize="35sp"
                    app:autoSizeStepGranularity="2sp"
                    android:layout_margin="5dp"/>

                <EditText
                    android:textColor="#000000"
                    android:layout_margin="5dp"
                    android:textColorHint="#ffffff "
                    android:id="@+id/changeName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Enter new name"
                    android:inputType="" />

                <EditText
                    android:textColorHint="#ffffff "
                    android:textColor="#000000"
                    android:layout_margin="5dp"
                    android:id="@+id/changePosition"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Enter new position"
                    android:inputType="textCapCharacters" />

                <EditText
                    android:textColor="#000000"
                    android:textColorHint="#ffffff "
                    android:layout_margin="5dp"
                    android:id="@+id/changeDescription"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Enter new description" />

                <Button
                    android:layout_margin="5dp"
                    android:id="@+id/changeButton"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center_horizontal"
                    android:text="submit changes"
                    android:textSize="10dp" />
        </LinearLayout>


</android.support.constraint.ConstraintLayout>